{
  "global": {
    "files": "/src/**/*.*"
  },
  "dependencies": [
    {
      "url": "https://github.com/abapedia/steampunk-2305-api",
      "folder": "/deps",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v750",
    "errorNamespace": "^(Z|Y)"
  },
  "rules": {
    "7bit_ascii": true,
    "parser_error": true,
    "check_syntax": true,
    "obsolete_statement": true,
    "begin_end_names": true,
    "check_ddic": true,
    "form_tables_obsolete": true,
    "functional_writing": true,
    "global_class": true,
    "implement_methods": true,
    "method_implemented_twice": true,
    "when_others_last": true,
    "avoid_use": {
      "define": true,
      "break": true,
      "statics": true,
      "default_key": true
    }
  }
}
